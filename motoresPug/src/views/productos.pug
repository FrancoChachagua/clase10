-let exist = dontObject
    head
        title="Pasteleria"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")

    body(class="p-5")
        h1="Bienvenidos a la vista de productos pug!"
        a(href="/") 
            button.btn.btn-primary(type='submit') Ir hacia el formulario
        
        unless exist === true
            div(class=" p-5")
                table(class="table table-dark")
                    thead
                        tr
                            th
                            th="Nombre"
                            th
                            th="Precio"
                            th="Foto"
                        div 
                            each products in preparedObject
                                tbody
                                    tr
                                        th 
                                        td=products.title
                                        td="$"
                                        td=products.price
                                        td
                                            img(src=products.thumbnail, alt=products.title, class="rounded" , width="70",height="50")
        else
            h2(class="text-center")="No hay productos!"
                
        
        
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js",integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")